          }
        }
      ]
    },
    {
      "name": "Grades",
      "item": [
        {
          "name": "Create Grade",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/grades",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"student_id\": \"uuid-here\",\n  \"course_id\": \"uuid-here\",\n  \"exam_type\": \"midterm\",\n  \"score\": 85,\n  \"letter_grade\": \"A\",\n  \"graded_at\": \"2023-01-01T00:00:00Z\",\n  \"created_by\": \"uuid-here\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "description": "Create a new grade for a student in a specific course"
          }
        },
        {
          "name": "Get My Grades",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/grades/my",
            "description": "Get all grades for the authenticated user"
