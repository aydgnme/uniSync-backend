        },
        {
          "name": "Get Summarized Grades",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/grades/summarized",
            "description": "Get summarized grades for the authenticated user"
          }
        },
        {
          "name": "Get Student Grades",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/grades/student/:studentId",
            "description": "Get all grades for a specific student"
          }
        }
      ]
