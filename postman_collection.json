{
  "info": {
    "name": "uniSync API",
    "description": "Collection of all endpoints for the uniSync backend API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "description": "Authenticate user and return JWT token"
          }
        },
        {
          "name": "Find User",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/auth/find-user",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cnp\": \"1234567890123\",\n  \"matriculationNumber\": \"12345\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "description": "Find user by CNP and matriculation number"
          }
        },
        {
          "name": "Generate Reset Code",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/auth/generate-reset-code",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cnp\": \"1234567890123\",\n  \"matriculationNumber\": \"12345\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "description": "Generate password reset code"
          }
        },
        {
          "name": "Verify Reset Code",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/auth/verify-reset-code",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cnp\": \"1234567890123\",\n  \"matriculationNumber\": \"12345\",\n  \"reset_code\": \"123456\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "description": "Verify password reset code"
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/auth/reset-password",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cnp\": \"1234567890123\",\n  \"matriculationNumber\": \"12345\",\n  \"code\": \"123456\",\n  \"newPassword\": \"newpassword123\",\n  \"confirmPassword\": \"newpassword123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "description": "Reset password with code"
          }
        },
        {
          "name": "Check User",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/auth/check-user",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "description": "Check if user exists"
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/users/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\",\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"role\": \"student\",\n  \"phone_number\": \"+1234567890\",\n  \"gender\": \"male\",\n  \"date_of_birth\": \"01.01.1990\",\n  \"nationality\": \"US\",\n  \"cnp\": \"1234567890123\",\n  \"matriculation_number\": \"12345\",\n  \"academicInfo\": {\n    \"faculty_id\": \"uuid-here\",\n    \"group_id\": \"uuid-here\",\n    \"is_modular\": true,\n    \"gpa\": 3.5\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "description": "Register a new user"
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/users/profile",
            "description": "Get the profile of the authenticated user"
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/api/users/profile",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"phone_number\": \"+1234567890\",\n  \"gender\": \"male\",\n  \"date_of_birth\": \"01.01.1990\",\n  \"nationality\": \"US\",\n  \"matriculation_number\": \"12345\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "description": "Update the profile of the authenticated user"
          }
        }
      ]
    },
    {
      "name": "Schedule",
      "item": [
        {
          "name": "Get Summarized Schedule",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/schedule/summarized",
            "description": "Get a summarized version of the schedule for the authenticated user"
          }
        },
        {
          "name": "Get My Schedule",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/schedule/my",
            "description": "Get the schedule for the currently authenticated student"
          }
        },
        {
          "name": "Get Weekly Schedule",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/schedule?pastWeeks=1&futureWeeks=1",
            "description": "Get schedules for past and future weeks"
          }
        }
      ]
    },
    {
      "name": "Time",
