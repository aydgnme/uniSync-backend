    {
      "name": "Files",
      "item": [
        {
          "name": "Upload File",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/files/upload",
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "/path/to/file"
                }
              ]
            },
            "description": "File upload"
          }
        },
        {
          "name": "Download File",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/files/:fileId",
            "description": "File download"
          }
        },
        {
          "name": "Delete File",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/api/files/:fileId",
            "description": "File deletion"
          }
        },
        {
          "name": "Get File Info",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/files/:fileId/info",
            "description": "Get file information"
          }
        }
