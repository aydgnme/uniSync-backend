{
    "info": {
      "name": "USV Portal API",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "GridFS",
        "item": [
          {
            "name": "Upload File",
            "request": {
              "method": "POST",
              "header": [],
              "body": {
                "mode": "formdata",
                "formdata": [
                  {
                    "key": "file",
                    "type": "file",
                    "src": "/path/to/your/file.pdf"
                  }
                ]
              },
              "url": {
                "raw": "{{baseUrl}}/files/upload",
                "host": ["{{baseUrl}}"],
                "path": ["files", "upload"]
              }
            }
          },
          {
            "name": "Download File",
            "request": {
              "method": "GET",
              "header": [],
              "url": {
                "raw": "{{baseUrl}}/files/:fileId",
                "host": ["{{baseUrl}}"],
                "path": ["files", ":fileId"],
                "variable": [
                  {
                    "key": "fileId",
                    "value": "your_file_id_here"
                  }
                ]
              }
            }
          },
          {
            "name": "Delete File",
            "request": {
              "method": "DELETE",
              "header": [],
              "url": {
                "raw": "{{baseUrl}}/files/:fileId",
                "host": ["{{baseUrl}}"],
                "path": ["files", ":fileId"],
                "variable": [
                  {
                    "key": "fileId",
                    "value": "your_file_id_here"
                  }
                ]
              }
            }
          },
          {
            "name": "Get File Info",
            "request": {
              "method": "GET",
              "header": [],
              "url": {
                "raw": "{{baseUrl}}/files/:fileId/info",
                "host": ["{{baseUrl}}"],
                "path": ["files", ":fileId", "info"],
                "variable": [
                  {
                    "key": "fileId",
                    "value": "your_file_id_here"
                  }
                ]
              }
            }
          }
        ]
      },
      {
        "name": "Homework",
        "item": [
          {
            "name": "Submit Homework",
            "request": {
              "method": "POST",
              "header": [],
              "body": {
                "mode": "formdata",
                "formdata": [
                  {
                    "key": "file",
                    "type": "file",
                    "src": "/path/to/homework.pdf"
                  },
                  {
                    "key": "studentId",
                    "value": "student_id_here",
                    "type": "text"
                  },
                  {
                    "key": "lectureId",
                    "value": "lecture_id_here",
                    "type": "text"
                  }
                ]
              },
              "url": {
                "raw": "{{baseUrl}}/homework/submit",
                "host": ["{{baseUrl}}"],
                "path": ["homework", "submit"]
              }
            }
          },
          {
            "name": "Get Homework",
            "request": {
              "method": "GET",
              "header": [],
              "url": {
                "raw": "{{baseUrl}}/homework/:homeworkId",
                "host": ["{{baseUrl}}"],
                "path": ["homework", ":homeworkId"],
                "variable": [
                  {
                    "key": "homeworkId",
                    "value": "homework_id_here"
                  }
                ]
              }
            }
          },
          {
            "name": "Get Student Homeworks",
            "request": {
              "method": "GET",
              "header": [],
              "url": {
                "raw": "{{baseUrl}}/homework/student/:studentId",
                "host": ["{{baseUrl}}"],
                "path": ["homework", "student", ":studentId"],
                "variable": [
                  {
                    "key": "studentId",
                    "value": "student_id_here"
                  }
                ]
              }
            }
          },
          {
            "name": "Get Lecture Homeworks",
            "request": {
              "method": "GET",
              "header": [],
              "url": {
                "raw": "{{baseUrl}}/homework/lecture/:lectureId",
                "host": ["{{baseUrl}}"],
                "path": ["homework", "lecture", ":lectureId"],
                "variable": [
                  {
                    "key": "lectureId",
                    "value": "lecture_id_here"
                  }
                ]
              }
            }
          },
          {
            "name": "Grade Homework",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n    \"grade\": 9,\n    \"feedback\": \"Very good work.\"\n}"
              },
              "url": {
                "raw": "{{baseUrl}}/homework/:homeworkId/grade",
                "host": ["{{baseUrl}}"],
                "path": ["homework", ":homeworkId", "grade"],
                "variable": [
                  {
                    "key": "homeworkId",
                    "value": "homework_id_here"
                  }
                ]
              }
            }
          }
        ]
      }
    ],
    "variable": [
      {
        "key": "baseUrl",
        "value": "http://localhost:3000"
      }
    ]
  }